<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="match_parent">

    <View
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:background="@color/darkGray"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/origin_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="مبدا:"/>

        <TextView
            android:id="@+id/origin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/termsOfServicesText3"
            android:layout_toEndOf="@id/origin_hint"
            android:lines="1"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/destination_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="مقصد:"/>

        <TextView
            android:id="@+id/destination_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/termsOfServicesText3"
            android:layout_toEndOf="@id/destination_hint"
            android:lines="1"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"/>

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit_order"
        android:layout_marginStart="64dp"
        app:backgroundTint="@color/Main_color"
        android:textColor="@color/black"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="64dp"
        android:layout_marginTop="32dp"/>




</LinearLayout>